# Full Node Configuration Example
# Copy this file to node-config.yml and update with your values

node:
  type: "full"
  version: "1.0.0"
  data_dir: "./data"

network:
  listen_address: "0.0.0.0"
  port: 8545
  max_peers: 50
  bootstrap_nodes:
    - "node1.gyd-network.com:8545"
    - "node2.gyd-network.com:8545"
    - "node3.gyd-network.com:8545"

location:
  region: "us-east-1"
  country: "US"
  latitude: 40.7128
  longitude: -74.0060

wallet:
  # Generate these using: go run main.go generate-keys
  address: "YOUR_WALLET_ADDRESS_HERE"
  public_key: "YOUR_PUBLIC_KEY_HERE"

sync:
  fast_sync: true
  checkpoint_interval: 1000
  max_block_batch: 500
  cache_size: 2048  # MB

rpc:
  enabled: true
  host: "0.0.0.0"
  port: 8546
  cors_origins: ["*"]
  max_request_size: 1048576  # 1MB
  
mining:
  enabled: true
  threads: 4
  reward_address: "YOUR_WALLET_ADDRESS_HERE"

consensus:
  block_time: 3  # seconds
  block_size_limit: 1048576  # 1MB
  
logging:
  level: "info"
  file: "./logs/node.log"
  max_size: 100  # MB
  max_backups: 3
  
security:
  private_key_file: "./keys/node-private.key"
  tls_enabled: false
  tls_cert: ""
  tls_key: ""

metrics:
  enabled: true
  port: 9090
  path: "/metrics"
